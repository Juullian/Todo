<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>ToDo App</title> 
        <link rel='stylesheet' href='/css/style.css'>
    </head>
  
    <body>
        <div>
            <div class="topnav">
                <form action="/delAlltodo" method="POST">
                    <button class="sav se-button" type="submit">Delete all</button>
                </form>
                <button id="lightmodebutton" type="submit">Lightmode</button>
                <a>Todo App</a>
            </div> 
                
            <div>
                <form id="form" action="/newtodo" method="POST">
                    <div class="input-group">
                        <input id="todoinput" class="form-control inpt" placeholder="Enter todo list item" value="" name="task">
                        <span>
                            <button id="btn-add" type="submit" class="save-button">Add</button>
                        </span>
                    </div>			     
                </form>        
            </div>
        </div>


        <div class="container inner">
            <ul id="list" class="list col-lg-6 col-8 mx-auto">
                <% for(var i=0; i<todoList.length; i++){ %>
                    <li>
                       <%= todoList[i].name %>
                        <a href="/delete/<%= todoList[i]._id %> " class="del"> 
                            <button type="submit">Delete</button>
                        </a>
                    </li>
                <% } %>
            </ul>
        </div>

        <script src="/javascript/index.js"></script>
    </body>
</html>